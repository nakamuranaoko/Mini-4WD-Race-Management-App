<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag image_path('favicon.ico') %>
    <!-- Apple Touch Icon (iOS のホーム画面アイコン) -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">


    <%= show_meta_tags %> <!-- メタタグを表示する -->

    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    
  </head>

  <body class="bg-gray-100 font-sans text-gray-900" style="padding-bottom: 80px;">
    <!-- ヘッダー -->
    <%= render 'shared/header' %>

    <!-- メインコンテンツ -->
    <main class="container mx-auto py-6">
      <!-- タイトル -->
      <h1 class="text-center text-3xl font-bold my-4"></h1>

      <!-- フラッシュメッセージ -->
      <div class="flash-messages mx-auto max-w-screen-md my-4">
        <% if notice.present? %>
          <div class="alert alert-info">
            <p><%= notice %></p>
          </div>
        <% end %>
        <% if alert.present? %>
          <div class="alert alert-error">
            <p><%= alert %></p>
          </div>
        <% end %>
      </div>

      <%= yield %>
    </main>

    <!-- フッター -->
    <%= render 'shared/footer' %>
  </body>
</html>
